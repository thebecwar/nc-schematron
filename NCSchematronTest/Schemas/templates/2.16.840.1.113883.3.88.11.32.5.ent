<pattern id='p-2.16.840.1.113883.3.88.11.32.5-note'>


 <!-- New context for Financial Responsibility Party Type of PAYOR -->

 <rule context='*[ancestor::cda:section[cda:templateId/@root="2.16.840.1.113883.10.20.1.9"]
